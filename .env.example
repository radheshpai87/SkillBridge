# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration (use MongoDB Atlas for production)
# Local: mongodb://127.0.0.1:27017/skillbridge
# Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/skillbridge
MONGODB_URI=mongodb://127.0.0.1:27017/skillbridge

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration (comma-separated origins)
# Development: http://localhost:5173
# Production: https://your-vercel-domain.vercel.app
CORS_ORIGIN=http://localhost:5173

# Vite Configuration (for local development)
USE_VITE=false